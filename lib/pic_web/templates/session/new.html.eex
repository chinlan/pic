<h1><%= gettext("Sign in") %></h1>
<%= form_for @conn, session_path(@conn, :new), [as: :session], fn f -> %>
  <div class="form-group">
    <%= text_input f, :email, placeholder: gettext("email") %>
  </div>
  <div class="form-group">
    <%= password_input f, :password, placeholder: gettext("password") %>
  </div>
  <div class="form-group">
    <%= submit gettext("Sign in"), class: "btn btn-primary" %>
  </div>
<% end %>
